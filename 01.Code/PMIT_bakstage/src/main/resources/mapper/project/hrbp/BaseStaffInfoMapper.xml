<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.isoftstone.pmit.system.staff.mapper.StaffBaseInfoMapper">
    <resultMap id="staffBaseInfoResult" type="com.isoftstone.pmit.system.staff.entity.StaffBaseInfo">
        <id column="employee_id"  property="employeeId" />
        <result column="password"  property="password"/>
    </resultMap>

    <select id="findUserByEmployeeId" parameterType="java.lang.String" resultType="com.isoftstone.pmit.project.hrbp.entity.BaseStaffInfo">
        SELECT
           s.employee_id,
           s.password,
        FROM
           sys_basestaffinfo AS s
        WHERE s.employee_id = #{employeeId}
    </select>
</mapper>